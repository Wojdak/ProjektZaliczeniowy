@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-white hover-effect" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item nav-login">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Match", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white hover-effect ">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item ">
        <a class="nav-link text-white login-button border border-white rounded" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li class="nav-item nav-login">
        <a class="nav-link text-white hover-effect" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    
}
</ul>
